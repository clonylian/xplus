(function(){var flag=false;var el_viewport=document.querySelector('head').querySelector('meta[name="viewport"]');var el_script=document.querySelector('#scriptViewport');var minWidth=el_script.getAttribute('data-width')||375;if(!el_viewport){el_viewport=document.createElement('meta');el_viewport.name='viewport';document.querySelector('head').insertBefore(el_viewport,el_script);}
var setScale=function(delay){if(flag)return;flag=true;window.setTimeout(function(){var sw=window.screen.width;var scale=sw/minWidth;scale=scale>1?1:scale.toFixed(2);el_viewport.setAttribute('content','width=device-width, initial-scale='+scale+', minimum-scale='+scale+', maximum-scale='+scale+', user-scalable=no');flag=false;},delay==null?200:delay);}
window.addEventListener("resize",setScale);setScale(0);})();